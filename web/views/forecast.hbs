<html>

<head>
</head>

<body>
    <h4>Location: {{timezone}}</h4>
    </br>
    <div>{{error}}</div>
    <div>Lowest Temperature for period: {{lowestTemperature}}</div>
    <div>Highest Temperature for period: {{highestTemperature}}</div>
    <br>
    {{#each days}}
        <div class="forecast-day">
            <div>Date: {{date}}</div>
            <div>Summary: {{summary}}</div>
            <div>Min Temperature: {{temperatureMin}}</div>
            <div>Max Temperature: {{temperatureMax}}</div>
        </div>
    {{/each}}
</body>

<style>
    .forecast-day {
        margin: 10px;
        padding: 5px;
        border: 1px solid black;
    }
</style>

</html>
